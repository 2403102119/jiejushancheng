<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:id="@+id/ll_all"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_sell"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/yongjinzhongxin"
                app:riv_border_width="0dip"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <LinearLayout
                android:id="@+id/ll"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="南极人网红款四件套宿舍床上用品单人学生床单被套..."
                    android:textColor="#111"
                    android:textSize="@dimen/sp_14" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_30"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="规格: 20斤一箱"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_12" />
                    <TextView
                        android:id="@+id/tv_number"
                        android:text="x2"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="共四件"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />
                    <TextView
                        android:id="@+id/tv_money"
                        android:text="合计:¥ 10000"
                        android:textColor="#FF1111"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="商品评分"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/mr_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="11dp"
            android:layout_marginLeft="5dp"
            app:srb_isIndicator="false"
            app:srb_numberOfStars="5"
            app:srb_rating="5"
            app:srb_stepSize="1"
            app:srb_drawBorderEnabled="false"
            app:srb_starBackgroundColor="#c0c0c0"
            app:srb_fillColor="@color/red_them"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="17dp"
        android:background="@drawable/biankuang9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editFeed"
            android:padding="12dp"
            android:gravity="top"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:maxLines="150"
            android:hint="为了下次更好的相遇，留下你的建议吧！！！"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="112dp" />
        <TextView
            android:text="0~150字"
            android:layout_gravity="right"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginRight="6.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.lxkj.jieju.View.FeedBackGridView
            android:id="@+id/photo1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3" />
    </LinearLayout>
</LinearLayout>