<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/commonTop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:id="@+id/statusbar"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:background="@color/white"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@mipmap/fanhui" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxWidth="250dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/rightText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="12dp"
                android:text="右边的文字"
                android:textColor="#CD2B1E"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/rightIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_xiayige"
                android:layout_alignParentRight="true"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:visibility="gone"/>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/trantracent_wode" />

    <!--以下是大小分类-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">

        <!--左侧大分类-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewLeft"
            android:layout_width="0dp"
            android:background="#F6F6F6"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/im_dingbu"
                android:src="@mipmap/logo"
                android:layout_width="match_parent"
                android:layout_height="173dp" />
            <!--右侧小分类分类-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewRight"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_5"

                android:background="#fff" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>