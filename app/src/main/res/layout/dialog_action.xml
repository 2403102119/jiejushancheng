<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#0000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/biankuang19"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <View
            android:visibility="gone"
            android:background="#E7E7E7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_context"
                android:text="CK2521563464"
                android:textColor="#FF0F0F"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_context_two"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="#111111"
                android:textSize="14sp"
                android:text="您确定选中当前云店铺编码作为全国厂家总店吗？"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:id="@+id/henXian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/lineGrey" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_action_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="取消"
                android:textColor="#666666"
                android:textStyle="bold" />
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/lineGrey"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/dialog_action_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="确定"
                android:textColor="@color/red_them"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>