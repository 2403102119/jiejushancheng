<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fengexian" />

    <View
        android:id="@+id/fengexian"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/Homerg02"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="#E7E7E7" />

    <RadioGroup
        android:id="@+id/Homerg02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RadioButton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_s1"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingTop="2dp"
            android:text="首页"
            android:textColor="@color/red_them"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/RadioButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/home_s2"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingTop="2dp"
            android:text="分类"
            android:textColor="#6B6B6B"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/RadioButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/home_s3"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingTop="2dp"
            android:text="购物车"
            android:textColor="#6B6B6B"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/RadioButton4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/home_s4"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingTop="2dp"
            android:text="我的"
            android:textColor="#6B6B6B"
            android:textSize="11sp" />
    </RadioGroup>

</RelativeLayout>