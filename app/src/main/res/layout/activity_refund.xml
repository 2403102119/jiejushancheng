<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lxkj.hrhc.Activity.RefundActivity">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <TextView
        android:text="请选择退款商品"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/commodity_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <TextView
        android:text="请选择退款原因"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cause_recycle"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
     <TextView
         android:text="退款金额"
         android:textColor="#1A1A1A"
         android:textSize="14sp"
         android:layout_marginLeft="14dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/tv_money"
         android:text="￥0.00"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:gravity="right"
         android:layout_marginRight="13dp"
         android:textSize="14sp"
         android:textColor="#1A1A1A"
         android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:text="请进行问题描述："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_describe"
        android:background="@drawable/biankuang6"
        android:hint="请描述问题"
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="top"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
       <com.lxkj.hrhc.View.FeedBackGridView
           android:id="@+id/photo1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="12dp"
           android:numColumns="3" />

   </LinearLayout>
  </android.support.v4.widget.NestedScrollView>

  <TextView
      android:id="@+id/tv_submit"
      android:text="提交"
      android:gravity="center"
      android:textSize="16sp"
      android:textColor="@color/white"
      android:background="@color/red_them"
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="44dp" />
 </RelativeLayout>



</LinearLayout>
