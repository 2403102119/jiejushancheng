<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/setting"
    tools:context="com.lxkj.jieju.Activity.DeatilsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/ns"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--<cn.ymex.widget.banner.Banner-->
                        <!--android:id="@+id/banner"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="400dp"-->
                        <!--android:background="#eeeeee"-->
                        <!--app:banner_auto_play="false"-->
                        <!--app:banner_interval="3000">-->
                        <!--<com.lxkj.jieju.View.TitleIndicatorLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:visibility="visible"-->
                            <!--android:layout_gravity="bottom"-->
                            <!--/>-->
                    <!--</cn.ymex.widget.banner.Banner>-->
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"></android.support.v4.view.ViewPager>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="￥"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#FF0F0F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_price"
                                android:text="0.00"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#FF0F0F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_oldprice"
                                android:text="￥0.00"
                                android:visibility="invisible"
                                android:textColor="#AAAAAA"
                                android:textSize="13sp"
                                android:layout_marginLeft="12.5dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_integral"
                                android:text="已售："
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="8.5dp"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_productName"
                                android:text=""
                                android:layout_width="0dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textIsSelectable="true"
                                android:textColor="#333333"
                                android:layout_weight="1"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_info"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <LinearLayout
                        android:id="@+id/ll_xuanze"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="47dp">

                        <LinearLayout
                            android:id="@+id/tv_quanwang"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_guige"
                                android:text="未选"
                                android:textSize="14sp"
                                android:textColor="@color/grey_666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="1dp"/>
                            <ImageView
                                android:src="@mipmap/jiantou_youpiao"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:background="#F2F2F2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <LinearLayout
                        android:background="@drawable/biankuang"
                        android:layout_marginTop="9.5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_detail"
                                android:text="商品详情"
                                android:padding="@dimen/dp_5"
                                android:textSize="14sp"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/grey3"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_pinglun"
                                android:text="买家评论"
                                android:visibility="gone"
                                android:gravity="center"
                                android:padding="@dimen/dp_5"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="@dimen/dp_1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="2dp">
                                <View
                                    android:id="@+id/view_detail"
                                    android:visibility="gone"
                                    android:background="@color/red_them"
                                    android:layout_width="64.5dp"
                                    android:layout_height="2dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="2dp">
                                <View
                                    android:id="@+id/view_pinglun"
                                    android:visibility="gone"
                                    android:background="@color/white"
                                    android:layout_width="64.5dp"
                                    android:layout_height="2dp"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <WebView
                        android:id="@+id/webView"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="WebViewLayout" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginLeft="15dp"
                            android:background="@color/red_them"
                            android:layout_width="4dp"
                            android:layout_height="17dp"/>
                        <TextView
                            android:text="为你推荐"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                       <android.support.v7.widget.RecyclerView
                           android:id="@+id/recycle"
                           android:paddingLeft="15dp"
                           android:paddingRight="15dp"
                           android:layout_marginTop="20dp"
                           android:layout_marginBottom="65dp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                       </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_on"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:id="@+id/bottomView1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/kefu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_0"
                        android:text="联系客服"
                        android:textColor="#8C8C8C"
                        android:textSize="@dimen/sp_11" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomView2"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/im_shoucang"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/shoucang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/dp_0"
                        android:text="收藏"
                        android:textSize="@dimen/sp_11" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomView3"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                </LinearLayout>


                <Button
                    android:id="@+id/tv_Shopping_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/biankuang13"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_at_buy"
                    android:visibility="gone"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/biankuang14"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/ViewCui4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/biankuang14"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_0"
                        android:gravity="center"
                        android:text="立即购买"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:background="@drawable/biankuang13"
                android:text="加入购物车"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@drawable/biankuang14"
                android:text="立即购买"
                android:layout_marginRight="11dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

