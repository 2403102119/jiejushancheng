<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lxkj.jieju.Activity.SearchActivity">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/biankuang7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="33dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/search"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <EditText
                android:id="@+id/et_search"
                android:hint="搜索您想要的商品"
                android:layout_marginLeft="8dp"
                android:imeOptions="actionSearch"
                android:gravity="center_vertical"
                android:textColorHint="@color/grey_999"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search"
            android:text="搜索"
            android:layout_marginLeft="15dp"
            android:textColor="#6D6C6C"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_lishi"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="历史搜索"
                android:textSize="15sp"
                android:textColor="@color/grey3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/im_delate"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/shanchu"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </LinearLayout>
        <com.lxkj.jieju.View.FlowLayout
            android:id="@+id/flow"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.lxkj.jieju.View.FlowLayout>
    </LinearLayout>
</LinearLayout>
