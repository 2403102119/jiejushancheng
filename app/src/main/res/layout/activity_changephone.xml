<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white"
    tools:context="com.lxkj.jieju.Activity.ChangephoneActivity">
    <TextView
        android:gravity="center"
        android:textColor="#6D6C6C"
        android:textSize="12sp"
        android:text="为了保证你的账号安全，修改密码需验证手机号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_phone"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/grey3"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_oldcode"
            android:hint="请输入验证码"
            android:textColorHint="#999999"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingLeft="8.5dp"
            android:background="@drawable/biankuang11"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp" />
        <TextView
            android:id="@+id/oldCode"
            android:gravity="center"
            android:text="发送验证码"
            android:textSize="11sp"
            android:layout_marginLeft="12.5dp"
            android:textColor="@color/grey3"
            android:background="@drawable/biankuang10"
            android:layout_width="86dp"
            android:layout_height="28dp" />
    </LinearLayout>
    <EditText

        android:paddingLeft="9.5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_password"
        android:hint="请输入新的手机号"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:background="@drawable/biankuang11"
        android:layout_width="match_parent"
        android:layout_height="28dp" />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_newcode"
            android:hint="请输入验证码"
            android:textColorHint="#999999"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingLeft="8.5dp"
            android:background="@drawable/biankuang11"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp" />
        <TextView
            android:id="@+id/newfaCode"
            android:gravity="center"
            android:text="发送验证码"
            android:textSize="11sp"
            android:layout_marginLeft="12.5dp"
            android:textColor="@color/grey3"
            android:background="@drawable/biankuang10"
            android:layout_width="86dp"
            android:layout_height="28dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="287dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="62dp"
        android:background="@drawable/biankuang3"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
