<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"

    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/biankuang8">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ccc" />
        </RelativeLayout>

        <com.lxkj.hrhc.View.RoundImageView
            android:id="@+id/iv_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/pinpaiqingcang"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:textSize="19sp"
            android:layout_toRightOf="@+id/iv_pic"
            android:textColor="#FF4425" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存："
            android:layout_below="@+id/tv_price"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_close"
            android:layout_toRightOf="@+id/iv_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:src="@mipmap/goods_spec_close" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/rl_count"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tv_qpl"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#333"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ib_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_reduce" />
                <EditText
                    android:id="@+id/et_count"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/biankuang12"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@drawable/selector_et"
                    android:textSize="12sp" />
                <ImageButton
                    android:id="@+id/ib_add"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/selector_add" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:visibility="gone" />
  <LinearLayout
      android:gravity="center"
      android:background="#FFFFFF"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_confirm"
          android:layout_width="match_parent"
          android:layout_height="38dp"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_marginRight="15dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/biankuang1"
          android:gravity="center"
          android:text="确定"
          android:textColor="@color/white"
          android:textSize="14sp" />
  </LinearLayout>
</LinearLayout>