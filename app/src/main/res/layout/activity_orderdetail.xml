<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxkj.jieju.Activity.OrderdetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="128dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/dengdai"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tv_zhuangtai"
                    android:text="等待付款"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/grey3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_shijian"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="需付款:"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_daifukuanzhuangtia"
                    android:text="￥69.00"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="  剩余:"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_time"
                    android:text="0小时00分钟"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_state"
                android:text="去支付"
                android:layout_marginTop="17dp"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/biankuang7"
                android:textColor="@color/grey_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ScrollView
            android:layout_marginBottom="57dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_10"
                    android:background="#fff"
                    android:orientation="vertical">
                    <LinearLayout
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/shouhuodizhi"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="24dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_receiverAddress"
                                android:text=""
                                android:textSize="13sp"
                                android:textColor="#333333"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_name"
                                    android:text=""
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:text=""
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="#F6F6F6" />

                <LinearLayout
                    android:id="@+id/ll_tital"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10">
                    <View
                        android:background="@color/red_them"
                        android:layout_width="3dp"
                        android:layout_height="12dp" />
                    <TextView
                        android:id="@+id/tv_shopName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="商品信息"
                        android:textColor="#111"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#F6F6F6" />
                <!--商品-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <!--<include layout="@layout/item_order_gift" />-->
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="#F6F6F6" />
                <LinearLayout
                    android:id="@+id/ll_lianxi"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="77dp">
                    <TextView
                        android:text="联系客服"
                        android:textColor="@color/grey3"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="#F6F6F6" />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_10"
                    android:background="#fff"
                    android:orientation="vertical">
                    <LinearLayout
                        android:padding="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="24dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_fukuan"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="付款时间："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_fukuan"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_shouhuo"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="确认收货："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_shouhuo"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_fahuo"
                                android:visibility="gone"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="商家发货："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_fahuo"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_tuikuan"
                                android:visibility="gone"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="退款时间："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_tuikuan"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#fff"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_number"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:text="订单编号："
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_number"
                            android:text=""
                            android:textSize="13sp"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:text="下单时间："
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_createdDate"
                            android:text=""
                            android:textSize="13sp"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="支付方式："
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_paytype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_5"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="配送方式："
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_peisongtype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="商品金额："
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_yunfei"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:text="¥0.00"
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_5"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="运费：         "
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_shi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="¥0.00"
                            android:textColor="#FF1111"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_5"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="需支付: "
                            android:textColor="#666"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_xuzhifu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="¥ 0.00"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#F6F6F6" />
                <LinearLayout
                    android:visibility="gone"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="65.5dp">
                    <TextView
                        android:text="买家留言："
                        android:textSize="14sp"
                        android:textColor="#1A1A1A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_beizhu"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="如有需要请留言如有需要请留言如有需要请留言如有需要请留言如有需要请留言"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#F6F6F6" />


            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:id="@+id/tv_after_sale"
            android:text="申请退款"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="@color/grey_666"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:background="@drawable/biankuang7"
            android:layout_width="82dp"
            android:layout_height="31dp" />
        <TextView
            android:id="@+id/tv_quxiao"
            android:text="取消订单"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:background="@drawable/biankuang7"
            android:layout_width="82dp"
            android:layout_height="31dp" />
        <TextView
            android:id="@+id/tv_detaile"
            android:text="去支付"
            android:textSize="14sp"
            android:layout_marginRight="17dp"
            android:textColor="@color/grey_666"
            android:gravity="center"
            android:background="@drawable/biankuang7"
            android:layout_width="82dp"
            android:layout_height="31dp" />
    </LinearLayout>
</RelativeLayout>
