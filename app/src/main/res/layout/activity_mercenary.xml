<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/red_them"
    tools:context="com.lxkj.jieju.Activity.MercenaryActivity">
    <View
        android:background="@drawable/jianbian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <FrameLayout
            android:id="@+id/fl_top"
            android:paddingTop="23dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/finishBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/fanhui"
                android:visibility="visible" />

            <TextView
                android:id="@+id/titleName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="8"
                android:text="首页"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </FrameLayout>
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:background="@color/red_them"
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.scwang.smartrefresh.layout.header.ClassicsHeader>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/ns"
            android:background="@color/red_them"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/red_them"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.lxkj.jieju.View.RoundImageView
                    android:id="@+id/ri_table"
                    android:src="@mipmap/tejiaxiangou"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="149dp" />
                <LinearLayout
                    android:background="@color/red_them"
                    android:layout_marginTop="26dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/ri_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/libao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="11dp"
                        android:paddingRight="@dimen/dp_6"
                        android:background="@color/red_them"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>
